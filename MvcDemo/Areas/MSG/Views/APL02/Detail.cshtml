@model CourseVM

@{
    ViewBag.Title = "檢視課程";
}

<h3>@ViewBag.Title</h3>
<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Detail", "APL02", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.HiddenFor(m => m.CurseId)
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.TeacherName, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.TeacherName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.TeacherName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Hours, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.EditorFor(m => m.Hours, "_Hours")
                    @Html.ValidationMessageFor(m => m.Hours, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="修改資料" class="btn btn-default" />
                </div>
            </div>
        }
    </div>
</div>